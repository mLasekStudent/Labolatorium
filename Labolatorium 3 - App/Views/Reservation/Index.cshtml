@model List<Reservation>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Spis rezerwacji</h1>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="Create">Dodaj rezerwacje</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Miasto
            </th>
            <th>
                Adres
            </th>
            <th>
                Pokój
            </th>
            <th>
                Właściciel
            </th>
            <th>
                Cena
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (Reservation item in @Model)
        {
            <tr>
                <td>
                    @item.data.ToString("dd MMMM yyyy")
                </td>
                <td>
                    @item.miasto
                </td>
                <td>
                    @item.adres
                </td>
                <td>
                    @item.pokoj
                </td>
                <td>
                    @item.wlasciciel
                </td>
                <td>
                    @item.cena zł
                </td>

                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>


                </td>
            </tr>
        }
    </tbody>
</table>